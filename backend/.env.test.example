# Test Environment Configuration

# Database reset behavior
SKIP_DATABASE_CLEARING=false  # Set to 'true' to keep data between tests
USE_PERSISTENT_DB=false       # Set to 'true' to use real MongoDB instead of in-memory

# MongoDB URIs
MONGODB_URI=mongodb://localhost:27017/cargoflow-dev
MONGODB_TEST_URI=mongodb://localhost:27017/cargoflow-test-persistent

# JWT and encryption
NODE_ENV=test
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-not-for-production-use
BCRYPT_SALT_ROUNDS=4

# Test-specific settings
TEST_TIMEOUT=30000
